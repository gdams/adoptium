{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "logo": {
          "type": "string"
        },
        "logoPadding": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "pattern": "^https://[^\\s/$.?#].[^\\s]*$"
        },
        "tier": {
          "type": "string",
          "enum": ["adopter"]
        }
      },
      "required": ["name", "logo", "url", "tier"],
      "additionalProperties": false
    }
  }
